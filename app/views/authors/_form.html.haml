= simple_form_for(author,:url => { :action => action }) do |f|
  - author.errors.full_messages.each do |msg|
    %p=msg
  =f.input :first_name
  =f.input :last_name
  =f.input :image_url
  =f.text_area :biography, :size => '80x10',:style=>'width: 80%'
  %br
  =f.button :submit

%h2 Biography Preview
#preview_area{:style=>'border: 1px solid black; width: 80%'}

:javascript
  function showPreview(){
    $('#preview_area').html( $('#author_biography').val() );
  };
  $( function() {
      $( "#author_biography" ).keyup(function(){showPreview();});
      showPreview();
  } );