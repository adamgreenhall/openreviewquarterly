.issueheader 
  .issuetitle=link_to_issue(@issue)
  .issueseason=@issue.season
  .issuedescription=@issue.description
            
#tableofcontents
  .toc_head Contents
  .tocpieces
  - @pieces.each do |piece|
    .pieceheader{:id=>'toc-'+urlify(piece.title)}
      %span.title=link_to_piece(piece,true) #in_issue=true
      %span.author=link_to_author(piece.author)
      .pieceheaderbar

#pieces
  - @pieces.each do |piece|
    .pieceheader{:id=>urlify(piece.title)}
      .title=link_to_piece(piece,false)
      .author=link_to_author(piece.author)
      .pieceheaderbar
    .piececontents.hyphens=raw(piece.content)